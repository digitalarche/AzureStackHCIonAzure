{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "managementSubnetResourceId": {
            "type": "string"
        },
        "smbSubnetResourceId": {
            "type": "string"
        },
        "imageResourceId": {
            "type": "string"
        },
        "vmName": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('vmName'), '-NetworkInterface-Management')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[concat(parameters('vmName'), '-Network Interface')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1-management",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "primary": true,
                            "subnet": {
                                "id": "[parameters('managementSubnetResourceId')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(parameters('vmName'), '-NetworkInterface-Smb')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[concat(parameters('vmName'), '-Network Interface')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1-smb",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "primary": false,
                            "subnet": {
                                "id": "[parameters('smbSubnetResourceId')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('vmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-07-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '-NetworkInterface-Management'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '-NetworkInterface-Smb'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_E4ds_v4"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "[parameters('imageResourceId')]"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmName'), '-OsDisk')]",
                        "caching": "ReadWrite",
                        "diskSizeGB": 128,
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '-NetworkInterface-Management'))]"
                        },
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), '-NetworkInterface-Smb'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        }
    ],
    "outputs": {}
}