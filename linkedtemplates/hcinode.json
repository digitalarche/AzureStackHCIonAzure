{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "managementSubnetResourceId": {
            "type": "string"
        },
        "smbSubnetResourceId": {
            "type": "string"
        },
        "imageResourceId": {
            "type": "string"
        },
        "vmName": {
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "vmSize": {
            "type": "string",
            "metadata": {
                "description": "vmSize"
            }
        },
        "dataDiskSizeinGB": {
            "type": "int",
            "allowedValues": [
                64,
                128,
                256,
                512,
                1024,
                2048
            ],
            "defaultValue": 256
        },
        "storageType": {
            "type": "string",
            "allowedValues": [
                "Premium_LRS",
                "Standard_LRS",
                "StandardSSD_LRS",
                "UltraSSD_LRS"
            ],
            "defaultValue": "Premium_LRS"
        },
        "numberOfDataDisks": {
            "type": "int",
            "minValue": 3,
            "maxValue": 12,
            "defaultValue": 4
        },
        "enableHybridBenefitServerLicenses": {
            "type": "bool"
        }
    },
    "functions": [],
    "variables": {
        "smbNicNameSuffix": "-smb-nic",
        "managementNicNameSuffix": "-management-nic"
    },
    "resources": [
        {
            "name": "[concat(parameters('vmName'), variables('managementNicNameSuffix'))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat('ipconfig1', variables('managementNicNameSuffix'))]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[parameters('managementSubnetResourceId')]"
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": true
            }
        },
        {
            "name": "[concat(parameters('vmName'), variables('smbNicNameSuffix'))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat('ipconfig1', variables('smbNicNameSuffix'))]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[parameters('smbSubnetResourceId')]"
                            }
                        }
                    }
                ],
                "enableAcceleratedNetworking": true
            }
        },
        {
            "name": "[parameters('vmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-07-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), variables('managementNicNameSuffix')))]",
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), variables('smbNicNameSuffix')))]"
            ],
            "properties": {
                "licenseType": "[if(bool(parameters('enableHybridBenefitServerLicenses')), 'Windows_Server', 'None')]",
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "[parameters('imageResourceId')]"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmName'), '-OsDisk')]",
                        "caching": "ReadWrite",
                        "diskSizeGB": 128,
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "copy": [
                        {
                            "name": "dataDisks",
                            "count": "[parameters('numberOfDataDisks')]",
                            "input": {
                                "name": "[concat(parameters('vmName'), '-datadisk-', copyIndex('dataDisks'))]",
                                "lun": "[copyIndex('dataDisks')]",
                                "createOption": "Empty",
                                "diskSizeGB": "[parameters('dataDiskSizeinGB')]",
                                "caching": "None",
                                "managedDisk": {
                                    "storageAccountType": "[parameters('storageType')]"
                                }
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), variables('managementNicNameSuffix')))]",
                            "properties": {
                                "primary": true
                            }
                        },
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'), variables('smbNicNameSuffix')))]",
                            "properties": {
                                "primary": false
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        }
    ],
    "outputs": {}
}